<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <referenceContainer name="header.container">
        <block name="free_shipping.alert" template="Adcend_FreeShipping::alert.phtml" before="-">
            <arguments>
                <argument name="jsLayout" xsi:type="array">
                    <item name="components" xsi:type="array">
                        <item name="free-shipping-alert" xsi:type="array">
                            <item name="component" xsi:type="string">Adcend_FreeShipping/js/ui-components/alert</item>
                            <item name="config" xsi:type="array">
                                <item name="template" xsi:type="string">Adcend_FreeShipping/alert</item>
                                <item name="message_templates" xsi:type="array">
                                    <item name="empty_cart" xsi:type="string">FREE shipping on order over $X!</item>
                                    <item name="x_away" xsi:type="string">You're $X away from FREE shipping!</item>
                                    <item name="free_shipping" xsi:type="string">You're order now has FREE shipping!</item>
                                </item>
                                <item name="FREE_SHIPPING_MIN" xsi:type="string">100</item>
                            </item>
                        </item>
                    </item>
                </argument>
            </arguments>
        </block>
    </referenceContainer>
</page>